{
  "version": 2,
  "buildCommand": "npm run build",
  "rewrites": [
    { "source": "/((?!assets|favicon\\.ico|robots\\.txt).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}